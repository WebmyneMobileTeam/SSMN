<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="AppTheme.Base">

    </style>

    <style name="Widget.MyApp.HeaderBar.Spinner" parent="Widget.AppCompat.Light.Spinner.DropDown.ActionBar">
        <item name="android:background">?android:selectableItemBackground</item>
        <item name="android:dropDownSelector">?android:selectableItemBackground</item>
        <item name="android:divider">@null</item>
        <item name="android:overlapAnchor">true</item>
    </style>

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryColorDark</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="colorAccent">#FF375BF1</item>
        </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>
    <style name="MyEdittext" parent="Widget.AppCompat.EditText">

        <item name="android:textSize">18sp</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:textColor">#000000</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>

    </style>

    <style name="MyTextView" parent="Base.Widget.AppCompat.EditText">

        <item name="android:textSize">18sp</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:textColor">#000000</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>

    </style>

    <style name="fill_parent">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
    </style>
    <style name="wrap_content">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="fill_wrap_content">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="home_ll_ic" parent="@style/fill_parent">
        <item name="android:orientation">horizontal</item>
        <item name="android:baselineAligned">false</item>
        <item name="android:layout_weight">0.5</item>
    </style>
    <style name="home_btn_big" parent="@style/fill_parent">
        <item name="android:layout_margin">1.0dip</item>
        <item name="android:layout_weight">0.5</item>
    </style>
    <style name="home_btn_big_txt">
        <item name="android:textSize">@dimen/small</item>
        <item name="android:typeface">normal</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/bg_home_trans_black</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/home_btn_big_txt_height</item>
        <item name="android:shadowColor">@color/bg_home_trans_grey</item>
        <item name="android:shadowDx">1.0</item>
        <item name="android:shadowDy">1.0</item>
        <item name="android:shadowRadius">0.6</item>
        <item name="android:layout_alignParentBottom">true</item>
    </style>
    <style name="home_btn_big_iv" parent="@style/wrap_content">
        <item name="android:scaleType">fitCenter</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>
    <style name="home_btn_small">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/home_btn_small_height</item>
        <item name="android:layout_marginLeft">@dimen/home_btn_small_margin_lr</item>
        <item name="android:layout_marginRight">@dimen/home_btn_small_margin_lr</item>
    </style>
    <style name="home_btn_small_iv">
        <item name="android:layout_width">@dimen/home_btn_small_iv_wh</item>
        <item name="android:layout_height">@dimen/home_btn_small_iv_wh</item>
        <item name="android:layout_margin">@dimen/home_btn_small_iv_margin</item>
        <item name="android:scaleType">fitCenter</item>
    </style>
    <style name="home_btn_small_tv" parent="@style/wrap_content">
        <item name="android:textSize">@dimen/medium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginLeft">@dimen/home_btn_small_tv_margin_l</item>
        <item name="android:layout_centerVertical">true</item>
    </style>
    <style name="home_btn_separator" parent="@style/fill_wrap_content">
        <item name="android:layout_marginTop">@dimen/home_btn_separator_margin_tb</item>
        <item name="android:layout_marginBottom">@dimen/home_btn_separator_margin_tb</item>
        <item name="android:src">@drawable/horizontal_separator</item>
        <item name="android:scaleType">fitXY</item>
    </style>
    <style name="about_tv" parent="@style/fill_wrap_content">
        <item name="android:textSize">@dimen/small</item>
        <item name="android:layout_marginBottom">@dimen/about_txt_margin_b</item>
    </style>
    <style name="tw_txt" parent="@style/fill_wrap_content">
        <item name="android:textSize">@dimen/btn_base_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/txt_grey_9</item>
        <item name="android:gravity">right</item>
        <item name="android:layout_marginLeft">@dimen/social_margin</item>
        <item name="android:layout_marginTop">@dimen/social_margin</item>
        <item name="android:layout_marginRight">@dimen/social_margin</item>
        <item name="android:layout_centerVertical">true</item>
    </style>
    <style name="social_icon">
        <item name="android:layout_width">@dimen/social_icon_wh</item>
        <item name="android:layout_height">@dimen/social_icon_wh</item>
        <item name="android:layout_margin">@dimen/social_icon_margin</item>
        <item name="android:scaleType">fitCenter</item>
    </style>
    <style name="v_info_tv" parent="@style/wrap_content">
        <item name="android:textSize">@dimen/small</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/txt_black</item>
        <item name="android:paddingLeft">@dimen/v_uf_margin</item>
        <item name="android:paddingRight">@dimen/v_uf_margin</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>
    <style name="v_uf_icon">
        <item name="android:layout_width">@dimen/v_uf_icon_wh</item>
        <item name="android:layout_height">@dimen/v_uf_icon_wh</item>
        <item name="android:layout_margin">@dimen/v_uf_icon_margin</item>
    </style>
    <style name="v_uf_tv" parent="@style/wrap_content">
        <item name="android:textSize">@dimen/medium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingTop">@dimen/v_uf_tv_pad_t</item>
        <item name="android:text">(100)</item>
        <item name="android:layout_centerVertical">true</item>
    </style>
    <style name="v_uf_star">
        <item name="android:background">@drawable/rate</item>
        <item name="android:layout_width">@dimen/v_uf_star_wh</item>
        <item name="android:layout_height">@dimen/v_uf_star_wh</item>
        <item name="android:scaleType">fitCenter</item>
    </style>
    <style name="v_btn_np">
        <item name="android:layout_width">@dimen/v_btn_np_w</item>
        <item name="android:layout_height">@dimen/v_btn_np_h</item>
        <item name="android:layout_centerVertical">true</item>
    </style>
    <style name="p_btn">
        <item name="android:textSize">@dimen/medium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/txt_black</item>
        <item name="android:background">@drawable/btn_white_rounded_top</item>
        <item name="android:layout_width">@dimen/p_btn_w</item>
        <item name="android:layout_height">@dimen/p_btn_h</item>
    </style>
    <style name="share_oc">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/share_btn_h</item>
        <item name="android:layout_marginTop">@dimen/share_margin</item>
    </style>
    <style name="share_icon">
        <item name="android:layout_width">@dimen/share_icon_wh</item>
        <item name="android:layout_height">@dimen/share_icon_wh</item>
        <item name="android:layout_margin">@dimen/share_icon_margin</item>
    </style>
    <style name="share_tv" parent="@style/wrap_content">
        <item name="android:textSize">@dimen/medium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginRight">@dimen/share_margin</item>
    </style>
    <style name="share_et" parent="@style/fill_parent">
        <item name="android:textSize">@dimen/large</item>
        <item name="android:gravity">top</item>
        <item name="android:background">@color/bg_cement</item>
        <item name="android:padding">@dimen/social_margin</item>
        <item name="android:layout_margin">@dimen/social_margin</item>
    </style>
    <style name="header">
        <item name="android:background">@color/bg_header</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/header_h</item>
    </style>
    <style name="header_icon">
        <item name="android:layout_width">@dimen/header_icon_wh</item>
        <item name="android:layout_height">@dimen/header_icon_wh</item>
    </style>
    <style name="header_title" parent="@style/wrap_content">
        <item name="android:textSize">@dimen/large</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginLeft">@dimen/header_tv_margin_l</item>
    </style>
    <style name="cname">
        <item name="android:textSize">@dimen/large</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/txt_black</item>
    </style>
    <style name="footer">
        <item name="android:background">@color/bg_header</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/footer_h</item>
        <item name="android:layout_alignParentBottom">true</item>
    </style>
    <style name="footer_btn_back">
        <item name="android:background">@drawable/btn_back</item>
        <item name="android:layout_width">@dimen/footer_btn_back_w</item>
        <item name="android:layout_height">@dimen/footer_btn_back_h</item>
    </style>
    <style name="footer_tv" parent="@style/wrap_content">
        <item name="android:textSize">@dimen/tiny</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingLeft">@dimen/footer_tv_pad</item>
        <item name="android:paddingRight">@dimen/footer_tv_pad</item>
        <item name="android:layout_centerVertical">true</item>
    </style>
    <style name="sv_ic" parent="@style/fill_parent">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_marginLeft">@dimen/sv_ic_ic_margin_lr</item>
        <item name="android:layout_marginRight">@dimen/sv_ic_ic_margin_lr</item>
    </style>
    <style name="sv_lbl" parent="@style/fill_wrap_content">
        <item name="android:textSize">@dimen/large</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">@dimen/sv_lbl_margin_tb</item>
        <item name="android:layout_marginBottom">@dimen/sv_lbl_margin_tb</item>
    </style>
    <style name="sv_et">
        <item name="android:textSize">@dimen/large</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/editboxbg</item>
        <item name="android:paddingLeft">@dimen/sv_et_pad_l</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/sv_et_h</item>
        <item name="android:layout_marginBottom">@dimen/sv_et_margin_b</item>
    </style>
    <style name="sv_tv_error" parent="@style/fill_wrap_content">
        <item name="android:textSize">@dimen/large</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/txt_grey_a</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/sv_tv_error_pad</item>
    </style>
    <style name="btn_base">
        <item name="android:textSize">@dimen/btn_base_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/btn_base_h</item>
        <item name="android:layout_marginBottom">@dimen/btn_base_margin_b</item>
    </style>
    <style name="btn_oc" parent="@style/fill_parent">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_weight">0.5</item>
    </style>

</resources>