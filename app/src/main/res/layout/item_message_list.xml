<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:id="@+id/categorysettings_lv_bg"

    android:layout_width="fill_parent"
    android:layout_height="@dimen/cs_clv_h"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:gravity="center_vertical"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal"
        style="@style/fill_parent">

        <TextView

            android:textColor="#fff"
            android:padding="32dp"
            android:id="@+id/txtMessageListCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/cs_clv_iv_margin_l" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:gravity="left"
                android:maxLines="3"
                android:textAppearance="@style/cname"
                android:textColor="@android:color/white"
                android:textSize="@dimen/large"
                android:layout_gravity="center_vertical"
                android:id="@+id/txtMessageListTitle"
                android:layout_marginLeft="@dimen/cs_clv_iv_margin_l"
                android:text="Text"
                style="@style/wrap_content" />


        </LinearLayout>


    </LinearLayout>
</LinearLayout>