<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.project.samplesmsapplication" >

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".ui.MyApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".ui.Launcher"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.HomeActivity"
            android:label="@string/title_activity_home" >
        </activity>
        <activity
            android:name=".ui.CategoryHomeActivity"
            android:label="@string/title_activity_category_home" >
        </activity>
        <activity
            android:name=".ui.MessageListActivity"
            android:label="@string/title_activity_details" >
        </activity>
        <activity
            android:name=".ui.FavouriteMessageListActivity"
            android:label="@string/title_activity_details" >
        </activity>
        <activity
            android:name=".ui.CategoryPreferenceActivity"
            android:label="@string/title_activity_settings" >
        </activity>
        <activity
            android:name=".ui.MessageDetailsActivity"
            android:label="@string/title_activity_message_details" >
        </activity>
        <activity
            android:name=".ui.FavouriteMessageDetailsActivity"
            android:label="@string/title_activity_message_details" >
        </activity>
        <activity
            android:name=".ui.SettingsActivity"
            android:label="@string/title_activity_settings" >
        </activity>
        <activity
            android:name=".ui.SearchMainActivity"
            android:label="@string/title_activity_search_main" >
        </activity>
    </application>

</manifest>
